<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:jonas="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="5dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.jonas.jdiagram.progress.JProgBall
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            jonas:balltextSize="20sp"
            jonas:progressMax="400">
        </com.jonas.jdiagram.progress.JProgBall>

        <com.jonas.jdiagram.progress.JProgress
            android:id="@+id/progress_msg"
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </com.jonas.jdiagram.progress.JProgress>
        <com.jonas.jdiagram.progress.RProgress
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <com.jonas.jdiagram.progress.ChargingView
            android:id="@+id/chv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.jonas.jdiagram.utils.FlowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showAni"
            android:text="展现动画"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="lianji"
            android:text="连击"/>
    </com.jonas.jdiagram.utils.FlowLayout>


</LinearLayout>